{
  "extends": [
    "github>smartlyio/renovate-config:security-base",
    "github>smartlyio/renovate-config:github-actions",
    "config:js-lib"
  ],
  "timezone": "Europe/Helsinki",
  "prHourlyLimit": 5,
  "labels": ["patch"],
  "packageRules": [
    {
      "groupName": "Smartly Oats",
      "packagePatterns": [
        "^@smartlyio\/oats"
      ],
      "schedule": "at any time"
    },
    {
      "depTypeList": ["devDependencies"],
      "schedule" : "before 8am on monday",
      "groupName": "devDependencies",
      "automerge": true,
      "labels": ["dependencies", "no release"]
    }
  ]
}
